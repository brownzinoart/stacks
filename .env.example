# OpenAI API Key for book recommendations
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Client-side API Keys for iOS/Static Export Builds
# These are used when API routes are not available (iOS app)
# IMPORTANT: Only add these if you're building for iOS/mobile
NEXT_PUBLIC_OPENAI_API_KEY=your-openai-api-key-here
NEXT_PUBLIC_ANTHROPIC_API_KEY=your-anthropic-api-key-here
NEXT_PUBLIC_GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# OMDB API Key for movie/show data enrichment
# Get your free key from: https://www.omdbapi.com/apikey.aspx
OMDB_API_KEY=your-omdb-api-key-here

# Supabase Configuration
# Create a project at: https://supabase.com
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Google Books API Key for enhanced book cover search
# Get your free key from: https://console.developers.google.com/apis/credentials
NEXT_PUBLIC_GOOGLE_BOOKS_API_KEY=your-google-books-api-key-here

# Optional: Other AI Services
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_VERTEX_PROJECT_ID=your-vertex-project-id
GOOGLE_VERTEX_LOCATION=us-central1

# Optional: Library Services
WORLDCAT_API_KEY=your-worldcat-key-here
LISTEN_NOTES_API_KEY=your-listen-notes-key-here
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token-here
ILS_CLIENT_ID=your-ils-client-id
ILS_CLIENT_SECRET=your-ils-client-secret

# Development server IP for mobile testing
# Replace with your computer's IP address (find it with: ifconfig | grep "inet " | grep -v 127.0.0.1)
NEXT_PUBLIC_DEV_SERVER_IP=192.168.86.174